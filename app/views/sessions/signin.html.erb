<%= form_tag('/session', method: :post) do %>
  <%= label :user_name, "Your name:"%>
  <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown") %><br><br>
  <%= label :password, "Your password:"%><br>
  <%= password_field_tag :password %><br><br>
  <%= submit_tag "Sign In" %>
<% end %>